<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7"
    android:weightSum="2"
    >

    <ImageView
        android:id="@+id/video_imageview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView android:id="@+id/video_text_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="影片名稱"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textSize="17dp"
            android:background="#FFFFFF"
            android:padding="5dp"
            />
        <LinearLayout android:id="@+id/layout_video_introduction"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="#FFFFFF"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="簡介:"
                android:textSize="15dp"
                android:textColor="#1986E6"
                />
            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                >
                <TextView android:id="@+id/video_text_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="簡介內容..."
                    android:textSize="15dp"
                    />
            </ScrollView>
        </LinearLayout>

        <LinearLayout android:id="@+id/layout_action_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            >
            <Button android:id="@+id/button_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="分享"
                android:layout_weight="1"
                android:textSize="13dp"
                />
            <Button android:id="@+id/button_vimeo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="前往Vimeo"
                android:layout_weight="1"
                android:textSize="13dp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>